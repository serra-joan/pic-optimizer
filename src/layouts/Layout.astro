---
import '@styles/global.css';

interface Props {
	  title?: string;
}

const { title = 'Pic Optimizer' } = Astro.props;
---

<!doctype html>
<html lang="ca">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=2" />
		<link rel="icon" type="image/svg+xml" href="/assets/logo.svg" />

		<meta property="og:type" content="website" />
        <meta property="og:url" content="https://pic-optimizer.serrajoan.com/" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content="Transforma les imatges en webp i per a diferents dispositius en un click." />
        <meta property="og:image" content="https://pic-optimizer.serrajoan.com/assets/logo_share.png" />

		<title>{title}</title>
		<meta name="description" content="Transforma les imatges en webp i per a diferents dispositius en un click." />
        <meta name="author" content="Pic Optimizer" />
	</head>
	<body>
		<header>
			<nav class="fixed top-0 left-0 w-full border-b border-primary p-4 bg-secondary">
				<div class="container mx-auto flex justify-between items-center">
					<a href="/" class="text-xl uppercase font-bold">Pic Optimizer</a>
					<p>
						Fet per 
						<a href="https://serrajoan.com" class="underline hover:text-gray-400">Joan Serra</a>
					</p>
				</div>
			</nav>
		</header>

		<main class="flex justify-center min-h-screen py-30">
        	<div class="container mx-auto px-4">
            	<slot />
        	</div>
    	</main>
	</body>
</html>
